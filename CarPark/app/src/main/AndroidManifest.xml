<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="carpark.carpark">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_ap"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_ap"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".task_list_a" />
        <activity
            android:name=".add_task"
            android:label="@string/add_task"
            android:parentActivityName=".task_list_a">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".task_list_a" />
        </activity>
        <activity
            android:name=".edit_task"
            android:label="@string/edit_text"
            android:parentActivityName=".task_list_a">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".task_list_a" />
        </activity>
        <activity
            android:name=".activ_task"
            android:label="@string/activ_task"
            android:parentActivityName=".task_list_a">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".task_list_a" />
        </activity>
        <activity
            android:name=".login"
            android:label="@string/auto">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".task_list_d"
            android:label="@string/app_name" />
        <activity
            android:name=".info_task_d"
            android:label="@string/fullInfoDriver"
            android:parentActivityName=".task_list_d">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".task_list_d" />

        </activity>
    </application>

</manifest>